<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#943BAAFF">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF5722">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/custom_loaivipham"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại vi phạm"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/custom_diemtru"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm trừ:"/>
            <TextView
                android:id="@+id/custom_tongdiemtru"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng iểm trừ:"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/custom_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên các học sinh vi phạm"
            android:lines="4"
            android:textSize="20sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>