<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zoy.firebasereal.setting_siso"
    android:background="@drawable/login">

    <RadioGroup
        android:id="@+id/siso_radiogr"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >

        <RadioButton
            android:id="@+id/r_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:text="ĐẦY ĐỦ" />

        <RadioButton
            android:id="@+id/r_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VẮNG"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/r_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KHÁC" />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sohocsinh_vang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số học sinh vắng"
            android:textSize="24sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tenhocsinh_vang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:inputType="textPersonName|textCapWords|textMultiLine"
            android:lines="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên học sinh vắng"
            android:textSize="24sp" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:hint="Tìm kiếm..."
        android:id="@+id/search_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/list_hs"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

    <Button
        android:id="@+id/xacnhan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="XÁC NHẬN"
        android:layout_gravity="center"
        android:background="@drawable/button_light"
        android:textColor="@color/while1"
        />

</LinearLayout>