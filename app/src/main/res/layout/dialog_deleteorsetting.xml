<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingTop="6dp"
        android:paddingLeft="22dp"
        android:layout_weight="1"
        android:text="Chọn công cụ"
        android:textSize="24sp"
        android:background="@drawable/tabar"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/admin_dialog_chinhsua"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="CHỈNH SỬA"
        android:textSize="18sp"
        android:background="@drawable/gradi_button"
        android:textColor="#81000000"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/admin_dialog_xoa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="XÓA LỚP"
        android:textSize="18sp"
        android:textColor="#81000000"
        android:background="@drawable/gradi_button"

        android:layout_marginTop="5dp"/>
</LinearLayout>