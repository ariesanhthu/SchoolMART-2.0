<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/sodaubai_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_btb_fill"
        android:textColor="@color/while1"
        android:text="Sổ đầu bài" />

    <Button
        android:id="@+id/giaovien_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_btb_fill"
        android:textColor="@color/while1"
        android:text="Giáo viên" />

    <Button
        android:id="@+id/hocsinh_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/button_btb_fill"
        android:layout_marginTop="5dp"
        android:textColor="@color/while1"
        android:text="HỌC SINH" />

    <Button
        android:id="@+id/tkb_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/button_btb_fill"
        android:textColor="@color/while1"
        android:layout_marginTop="5dp"
        android:text="THỜI KHÓA BIỂU" />

    <Button
        android:id="@+id/xoalop_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/button_btb_fill"
        android:textColor="@color/while1"
        android:layout_marginTop="5dp"
        android:text="XÓA LỚP" />

    <Button
        android:background="@drawable/button_btb_fill"
        android:textColor="@color/while1"
        android:layout_marginTop="5dp"
        android:id="@+id/huy_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="HỦY" />
</LinearLayout>