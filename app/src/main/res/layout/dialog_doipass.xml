<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_btb_fill">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="ĐỔI MẬT KHẨU MỚI"
                android:textColor="@color/while1"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/doi_huyimg"
                android:layout_width="50dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_cancel" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/doi_passold"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu cũ"
                android:inputType="textPassword"
                android:backgroundTint="#E81E92C6"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_baseline_lockblue_24"
                android:drawableStart="@drawable/ic_baseline_lockblue_24"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/doi_passnew"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:backgroundTint="#E81E92C6"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_twotone_lockblue_open_24"
                android:drawableStart="@drawable/ic_twotone_lockblue_open_24"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/doi_passnew1"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu mới"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_twotone_lock_24"
                android:drawableStart="@drawable/ic_twotone_lock_24"
                android:backgroundTint="#E81E92C6"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/doi_xacnhan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_btb_fill"
            android:gravity="center"
            android:text="XÁC NHẬN"
            android:textColor="@color/while1"
            android:textSize="16dp" />


</LinearLayout>