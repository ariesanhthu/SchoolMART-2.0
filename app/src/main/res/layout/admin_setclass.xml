<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/viewtiet_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tabar"
        android:gravity="center"
        android:text="Tạo Lớp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewtiet_admin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Môn học:"
            android:textColor="#A8000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editmon_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint="#E81E92C6"
            android:layout_marginLeft="20dp"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL1"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giáo viên:"
            android:textColor="#A8000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editgv_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint="#E81E92C6"
            android:layout_marginLeft="20dp"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thời gian:"
            android:textColor="#A8000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittg_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint="#E81E92C6"
            android:layout_marginLeft="20dp"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_below="@id/LL3">

        <Button
            android:layout_weight="3"
            android:id="@+id/xacnhanbt_admin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_custom"
            android:text="XÁC NHẬN"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <Button
            android:layout_weight="2"
            android:id="@+id/huybt_admin_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_custom"
            android:text="HỦY"
            android:textColor="#ffff"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>